
@{
    ViewData["Title"] = "RegisterPage";
}
<head>
    <style>
        #registerInput {
            padding: 0px;
            margin: auto;
        }

        #registerSubmit {
            margin-top: 5%;
            margin-left: 15%;
        }

        #registerForm {
            background: #AFEEEE;
            border-radius: 10px;
            font-family: Arial, Helvetica, sans-serif;
        }

        label {
            font-family: Arial, Helvetica, sans-serif;
            color: black;
            font-size: 20px;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>
<h1>Registration for divers</h1>
<div class="container register-form" id="registerForm">
    <div class="form">
        <div class="form-content">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group" id="registerInput">
                            <label>Login:</label><br />
                            <input type="text" name="login" required /><br /><br />
                        </div>
                        <div class="form-group" id="registerInput">
                            <label>Password:</label><br />
                            <input type="text" name="password" required /><br /><br />
                        </div>
                        <div class="form-group" id="registerInput">
                            <label>Email:</label><br />
                            <input type="email" name="email" required /><br /><br />
                        </div>
                        <div class="form-group" id="registerInput">
                            <label>#Device number:</label><br />
                            <input type="number" name="device" required /><br /><br />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group" id="registerInput">
                            <label>Name:</label><br />
                            <input type="text" name="name" required /><br /><br />
                        </div>
                        <div class="form-group" id="registerInput">
                            <label>Surname:</label><br />
                            <input type="text" name="surname" required /><br /><br />
                        </div>
                        <div class="form-group" id="registerInput">
                            <label>Age:</label><br />
                            <input type="number" name="age" required /><br /><br />
                        </div>
                        <div class="form-group" id="registerSubmit">
                            <input type="submit" value="Register" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>