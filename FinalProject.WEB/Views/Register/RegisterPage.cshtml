@{
    ViewData["Title"] = "RegisterPage";
}
<head>
    <link rel="stylesheet" href="~/css/form.css">
</head>
<form class="decor" method="post" id="registerForm">
    <div class="form-inner">
        <h3>Registration for divers</h3>
        <input type="text" name="login" placeholder="Login" id="login">
        <input type="password" name="password" placeholder="Password" id="password">
        <input type="password" name="passwordRepeat" placeholder="Repeat password" id="passwordRepeat">
        <input type="email" name="email" placeholder="Email" id="email">
        <input type="number" name="deviceNumber" placeholder="#Device" id="deviceNumber">
        <input type="text" name="name" placeholder="Name" id="name">
        <input type="text" name="surname" placeholder="Surname" id="surname">
        <input type="number" name="age" placeholder="Age" id="age">
        <input type="submit" value="Sign up" id="submit">
        <h2>@ViewBag.Message</h2>
    </div>
</form>
<script>
    $('form[id="registerForm"]').validate({
        rules: {
            login: 'required',
            email: {
                required: true,
                email: true,
            },
            password: {
                required: true,
                minlength: 6,
            },
            passwordRepeat: {
                required: true,
                minlength: 6,
                equalTo: "#password"
            },
            name: {
                required: true
            },
            surname: 'required',
            age: {
                required: true,
                range: [14, 70]
            }
        },
        messages: {
            login: 'This field is required',
            name: 'This field is required',
            surname: 'This field is required',
            email: 'Enter a valid email',
            passwordRepeat: 'Passwords should be equal!',
            password: {
                minlength: 'Password should be at least 6 symbols'
            },
            age : 'Incorrect age!'
        },
        submitHandler: function (form) {
            form.submit();
        }
    });
</script>