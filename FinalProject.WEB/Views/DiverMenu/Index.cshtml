@{
    Layout = "~/Views/Shared/_DiverLayout.cshtml";
}
<div class="blog">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-lg-4 col-sm-8">
                <div class="card">
                    <div class="card-img">
                        <a href="@Url.Action("GetOxygen", "Calculation")"><img src="~/images/oxygen.png" class="img-fluid"></a>
                    </div>
                    <div class="card-body">
                       <h4 class="card-title">Calculate required oxygen</h4>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-4 col-sm-8">
                <div class="card">
                    <div class="card-img">
                        <a href="@Url.Action("GetAllowedTime", "Calculation")"><img src="~/images/diveTime.png" class="img-fluid"></a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Calculate allowed divetime</h4>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-4 col-sm-8">
                <div class="card">
                    <div class="card-img">
                        <a href="@Url.Action("GetDiveTimeChartMenu", "Chart")"><img src="~/images/chartIcon.png" class="img-fluid"></a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Get chart of divetime</h4>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>